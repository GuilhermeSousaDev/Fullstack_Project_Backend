{
   "compilerOptions": {
      "baseUrl": ".",
      "paths": {
         "@config/*": [
             "src/config/*"
         ],
         "@modules/*": [
             "src/modules/*"
         ],
         "@shared/*": [
             "src/shared/*"
         ]
     },
      "lib": [
         "es5",
         "es6",
      ],
      "target": "es5",
      "module": "commonjs",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
   }
}